<% layout("/layouts/boilerplate")%>
<div class="min-h-screen flex justify-center items-center bg-gray-50">
  <div
    class="flex md:flex-row items-center md:items-start bg-white p-6 rounded-lg shadow-md space-y-6 md:space-y-0 md:space-x-8"
  >
    <!-- User Avatar -->
    <div class="flex-shrink-0">
      <img
        src="<%= user.avatar %>"
        alt="User Avatar"
        height="500"
        width="500"
        class="w-32 h-32 mr-2 md:w-40 md:h-40 rounded-full object-cover border-4 border-gray-200 shadow-lg"
      />
    </div>
    <!-- User Info -->
    <div class="text-center md:text-left">
      <h3 class="text-lg md:text-xl text-gray-600"><%= user.email %></h3>
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
        <%= user.userName %>
      </h1>
      <a
        href="/user/<%= user.id %>/editUserProfile"
        class="inline-block p-3 bg-green-600 text-white text-sm font-semibold rounded-full px-6 py-3 shadow-md hover:bg-green-700 transition-colors duration-300"
      >
        Edit Profile
      </a>
    </div>
  </div>
</div>
