<div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-center">
    Update User Information <br /><span class="opacity-50">(Only Once)</span>
  </h2>
  <!-- User Info Form -->
  <form
    action="/user/<%=user.id%>/updateUser?_method=PUT"
    method="POST"
    enctype="multipart/form-data"
  >
    <div class="flex md:flex-row justify-between items-center">
      <!-- Left Section: User Info -->
      <div class="w-full md:w-2/3 flex flex-col">
        <!-- UserName Field -->
        <div class="mb-4">
          <label for="userName" class="block text-sm font-medium text-gray-700"
            >Username</label
          >
          <input
            type="text"
            id="userName"
            name="userName"
            value="<%= user.userName %>"
            required
            class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
          />
        </div>

        <!-- Email Field -->
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            value="<%= user.email %>"
            required
            class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
          />
        </div>
        <!-- Submit Button -->
        <div class="relative">
          <button
            type="submit"
            class="bg-green-600 absolute right-0 mt-3 text-white py-2 px-4 rounded-md shadow hover:bg-green-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          >
            Update Info
          </button>
        </div>
      </div>

      <!-- Right Section: Avatar Display with Pencil Icon -->
      <div class="w-full md:w-1/3 flex justify-center mt-8 md:mt-0 relative">
        <div class="relative w-32 h-32 rounded-full md:w-48 md:h-48">
          <img
            id="avatarPreview"
            src="<%= newImageUrl %>"
            alt="Current Avatar"
            class="w-full h-full rounded-full object-cover border-4 border-gray-300"
          />
          <div
            class="absolute top-0 right-0 bg-gray-200 p-2 rounded-full cursor-pointer"
            onclick="document.getElementById('avatar').click()"
          >
            <i class="fa fa-pencil text-gray-600"></i>
          </div>
        </div>

        <input
          type="file"
          id="avatar"
          name="avatar"
          accept="image/*"
          class="hidden"
          onchange="previewAvatar(event)"
        />
      </div>
    </div>
  </form>
</div>

<script>
  function previewAvatar(event) {
    const reader = new FileReader();
    reader.onload = function () {
      const output = document.getElementById("avatarPreview");
      output.src = reader.result;
      output.style.width = "500px";
      output.style.height = "500px";
    };
    if (event.target.files[0]) {
      reader.readAsDataURL(event.target.files[0]);
    }
  }
</script>
