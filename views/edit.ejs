<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ExploreInn</title>
  </head>
  <body class="bg-gray-100">
    <div class="max-w-lg mx-auto my-10 bg-white p-8 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">
        Edit <%=listing.title%>
      </h2>

      <form
        action="/listings/update/<%=listing._id %>?_method=PUT"
        method="POST"
      >
        <!-- Title -->
        <div class="mb-4">
          <input
            type="text"
            id="title"
            name="title"
            value="<%= listing.title %>"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100"
          />
        </div>

        <!-- Description -->
        <div class="mb-4">
          <textarea
            id="description"
            name="description"
            rows="4"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100"
          >
<%= listing.description %></textarea
          >
        </div>

        <!--Image-->
        <div class="mb-4">
          <input
            type="text"
            id="image"
            name="image"
            value="<%= listing.image %>"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100"
          />
        </div>

        <!-- Category -->
        <div class="mb-4">
          <select id="category" name="category" class="dropdown">
            <option value="<%= listing.category%>">
              <%=listing.category%>
            </option>
            <option value="villa">Villa</option>
            <option value="igloo">Igloo</option>
            <option value="cabin">Cabin</option>
            <option value="cottage">Cottage</option>
            <option value="pentHouse">Penthouse</option>
            <option value="apartment">Apartment</option>
            <option value="swimmingPool">Swimming Pool</option>
            <option value="entirePlace">Entire Place</option>
          </select>
        </div>

        <!-- Price -->
        <div class="mb-4">
          <input
            type="number"
            id="price"
            name="price"
            value="<%= listing.price %>"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100"
          />
        </div>

        <!-- Location -->
        <div class="mb-4">
          <input
            type="text"
            id="location"
            name="location"
            value="<%= listing.location %>"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100"
          />
        </div>

        <!--Country-->
        <div class="mb-4">
          <input
            type="text"
            id="country"
            name="country"
            value="<%= listing.country %>"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100"
          />
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button
            type="submit"
            class="w-full bg-indigo-500 text-white py-2 px-4 rounded-md hover:bg-indigo-600 transition duration-200"
          >
            Edit
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
