<% layout("/layouts/boilerplate")%>
<body>
  <div class="w-[75%] h-screen flex flex-col mx-auto">
    <h1 class="text-3xl mb-6 font-bold">Edit <%=listing.title%></h1>
    <div>
      <form
        action="/listings/update/<%=listing._id %>?_method=PUT"
        method="POST"
        class="space-y-6"
      >
        <div>
          <!--Title-->

          <label for="title" class="block text-md font-medium text-gray-700"
            >Title</label
          >
          <input
            type="text"
            id="title"
            name="title"
            value="<%= listing.title %>"
            required
            class="mt-1 block w-full p-2 rounded-md border-2 shadow-sm focus:border-black focus:ring-black"
          />
        </div>

        <!--Description-->

        <div>
          <label
            for="description"
            class="block text-md font-medium text-gray-700"
            >Description</label
          >
          <textarea
            id="description"
            name="description"
            required
            class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
          >
<%=listing.description%></textarea
          >
        </div>

        <!--Image-->

        <div>
          <label for="image" class="block text-md font-medium text-gray-700"
            >Image Link</label
          >
          <input
            type="text"
            name="image"
            value="<%=listing.image%>"
            id="image"
            class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
          />
        </div>

        <!--Price-->

        <div>
          <label for="price" class="block text-md font-medium text-gray-700"
            >Price</label
          >
          <input
            value="<%=listing.price%>"
            type="number"
            id="price"
            name="price"
            required
            class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
          />
        </div>

        <!-- Category -->

        <div class="mb-4">
          <label
            for="category"
            class="block text-md font-medium text-gray-700 mb-2"
            >Category</label
          >
          <select
            id="category"
            name="category"
            class="block w-full p-2 border-2 bg-white border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500"
          >
            <option value="<%=listing.category%>"><%=listing.category%></option>
            <option value="Villa">Villa</option>
            <option value="Igloo">Igloo</option>
            <option value="Cabin">Cabin</option>
            <option value="Cottage">Cottage</option>
            <option value="PentHouse">Penthouse</option>
            <option value="Apartment">Apartment</option>
            <option value="SwimmingPool">Swimming Pool</option>
            <option value="EntirePlace">Entire Place</option>
          </select>
        </div>

        <!--Location-->

        <div>
          <label for="location" class="block text-md font-medium text-gray-700"
            >Location</label
          >
          <input
            value="<%=listing.location%>"
            type="text"
            id="location"
            name="location"
            required
            class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
          />
        </div>

        <!--Country-->

        <div>
          <label for="country" class="block text-md font-medium text-gray-700"
            >Country</label
          >
          <input
            value="<%=listing.country%>"
            type="text"
            id="country"
            name="country"
            required
            class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
          />
        </div>
        <div class="flex justify-start">
          <button
            type="submit"
            class="rounded-md bg-red-500 px-5 py-2 text-sm font-semibold text-white shadow-sm hover:opacity-85 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black"
          >
            Edit
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
