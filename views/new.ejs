<% layout("/layouts/boilerplate")%>
<body>
  <div class="w-[75%] h-screen flex flex-col mx-auto">
    <h1 class="text-3xl mb-6 font-bold">Create a New Listing</h1>
    <div>
      <form
        action="/listings/create"
        method="post"
        class="space-y-6"
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="block text-md font-medium text-gray-700"
            >Title</label
          >
          <input
            placeholder="Enter title"
            type="text"
            id="title"
            name="title"
            required
            class="mt-1 block w-full p-2 rounded-md border-2 shadow-sm focus:border-black focus:ring-black"
          />
        </div>
        <div>
          <label
            for="description"
            class="block text-md font-medium text-gray-700"
            >Description</label
          >
          <textarea
            placeholder="Enter description"
            id="description"
            name="description"
            required
            class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
          ></textarea>
        </div>
        <div>
          <label for="image" class="block text-md font-medium text-gray-700"
            >Image</label
          >
          <input
            type="file"
            name="image"
            required
            id="image"
            class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
          />
        </div>
        <div>
          <label for="price" class="block text-md font-medium text-gray-700"
            >Price</label
          >
          <input
            placeholder="Enter price"
            type="number"
            id="price"
            name="price"
            required
            class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
          />
        </div>

        <!-- Category -->

        <div class="mb-4">
          <label
            for="category"
            class="block text-md font-medium text-gray-700 mb-2"
            >Category</label
          >
          <select
            required
            id="category"
            name="category"
            class="block w-full p-2 border-2 bg-white border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500"
          >
            <option value="" disabled selected>Select a category</option>
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic Cities">Iconic Cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Castles">Castles</option>
            <option value="Amazing Pools">Amazing Pools</option>
            <option value="Camping">Camping</option>
            <option value="Farms">Farms</option>
            <option value="Arctic">Arctic</option>
          </select>
        </div>

        <!--Location-->
        <div class="md:flex block">
          <div class="w-full lg:w-1/2 md:w-[100%] mr-2 mb-3">
            <label
              for="location"
              class="block text-md font-medium text-gray-700"
              >Location</label
            >
            <input
              placeholder="Enter location"
              type="text"
              id="location"
              name="location"
              required
              class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
            />
          </div>

          <!--Country-->
          <div class="w-full lg:w-1/2 md:w-[100%]">
            <label for="country" class="block text-md font-medium text-gray-700"
              >Country</label
            >
            <input
              placeholder="Enter country"
              type="text"
              id="country"
              name="country"
              required
              class="mt-1 block w-full p-2 border-2 rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black"
            />
          </div>
        </div>
        <div class="flex justify-start">
          <button
            type="submit"
            class="rounded-md bg-red-500 px-5 py-2 text-sm font-semibold text-white shadow-sm hover:opacity-85 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black"
          >
            Add
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
